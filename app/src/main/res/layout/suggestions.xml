<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8000"
    android:layout_margin="15dp"
    android:id="@+id/suggestions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="生活建议"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comfort_index"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="舒适度指数:较舒适"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comfort_text"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="白天虽然天气晴好，但早晚会感觉偏凉，午后舒适、宜人"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dress_index"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="穿衣指数:较冷"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dress_text"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="建议着厚外套加毛衣等服装。年老体弱者宜着大衣、呢外套加羊毛衫"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carwash_index"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="洗车指数:较适宜"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carwash_text"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="较适宜洗车，未来一天无雨，风力较小，擦洗一新的汽车至少能保持一天"/>

</LinearLayout>